<h3>ブックマーク一覧</h3>
<table class="table">
  <thead>
    <tr>
      <th>投稿画像</th>
      <th>タイトル</th>
      <th>都道府県</th>
      <th>投稿者</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr id="post_<%= bookmark.post.id %>">
        <%= link_to post_path(bookmark.post.id) do %>
          <td><%= attachment_image_tag bookmark.post, :image, format: 'jpeg', fallback: "no_image.jpg", size: "80x80" %></td>
          <td><%= bookmark.post.title %></td>
        <% end %>
          <td><%= bookmark.post.prefecture %></td>
        <%= link_to user_path(bookmark.post.user.id) do %>
          <td><%= bookmark.post.user.name %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "マイページへ", user_path(current_user), class: "btn btn-sm btn-primary ml-3" %>