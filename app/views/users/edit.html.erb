<div class="container">
  <div class="row">
    <div class="col-8">
      <h3>会員情報編集</h3>
      <%= form_with model: @user, local:true do |f|%>
      <div class="form-group">
        <%= f.label :name, "名前" %>
        <%= f.text_field :name, autofocus: true, class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :image, "プロフィール画像" %>
        <%= f.attachment_field :image, placeholder: "プロフィール画像" , class:"form-control-file" %>
      </div>

      <div class="form-group">
        <%= f.label :prefecture, "出身地" %><br>
        <%= f.select :prefecture, User.prefectures.keys, {prompt: '選択してください'}, class: 'form-control btn btn-info' %>
      </div>

      <div class="form-group">
        <%= f.label :comment, "紹介文" %>
        <%= f.text_field :comment, class:"form-control" %>
      </div>

      <div class="actions mt-4">
        <%= f.submit '編集内容を保存', class: "btn btn-sm btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>