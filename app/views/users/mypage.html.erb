<div class="container">
  <div class="row">
    <div class="col-8">
      <h3>マイページ</h3>
      <h4><strong>登録情報</strong><%= link_to "編集する", edit_user_path(@user.id), class: "btn btn-sm btn-success ml-3" %></h4>
        <table class="table table-hover table-bordered mt-2">
          <tbody>
            <tr>
              <tb class="table-active">
                <%= attachment_image_tag @user, :image, size: "200x200", fallback: "no_image.jpg" %>
              </tb>
            </tr>
            <tr>
              <td class="table-active">氏名</td>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <td class="table-active">出身地</td>
              <td><%= @user.prefecture %></td>
            </tr>
            <tr>
              <td class="table-active">メールアドレス</td>
              <td><%= @user.email %></td>
            </tr>
          </tbody>
        </table>
        <table>
          <tbody>
            <tr>
              <td>紹介文</td>
            </tr>
            <tr>
              <td><%= @user.comment %></td>
            </tr>
          </tbody>
        </table>

        <div class="col-4">
          <p><%= link_to "フォロー・フォロワー一覧", class: "btn btn-sm btn-primary ml-3" %></p>
          <p><%= link_to "新規投稿する", new_post_path, class: "btn btn-sm btn-primary ml-3" %></p>
          <p><%= link_to "退会する", confirm_user_path(@user.id), class:"btn btn-sm btn-danger mt-2" %></p>
        </div>
      </div>
    </div>
</div>