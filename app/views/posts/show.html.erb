<h2>投稿詳細</h2>
<div class="containar">
  <h3><%= @post.title %></h3>
  <p><%= @post.prefecture %></p>
　<% if @post.post_images.present? %>
    <% @post.post_images.each do |image| %>
      <%= attachment_image_tag image, :image, size: "200x240", class: "default_image" %>
    <% end %>
  <% else %>
    <h4>画像はありません。</h4>
  <% end %>
  <p><%= @post.description %></p>
  <p><%= @post.address %></p>
</div>

<% if @post.user == current_user %>
  <%= link_to "編集する", edit_post_path(@post), class:"btn btn-sm btn-success" %>
  <%= link_to "削除する", post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger" %>
<% end %>