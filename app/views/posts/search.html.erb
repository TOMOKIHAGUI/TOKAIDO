<div class="card-list-containar py-5">
    <h4>タグリスト</h4>
    <% @tag_list.each do |list| %>
      <%= link_to list.tag_name"(#{list.posts.count})", tag_posts_path(tag_id: list.id) %>
    <% end %>
   <h2><%= @tag.tag_name %>に関する投稿一覧</h2>
  </div>
  <% @posts.each do |post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg" id="post_<%= post.id %>">
    <%= link_to post_path(post.id) do %>
      <%= attachment_image_tag post, :image, size: "100x120", format: 'jpg', fallback: "no_image.jpg", class:"card-img-top"; %>
    <% end%>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= link_to user_path(post.user.id) do %>
            <%= attachment_image_tag post.user, :image, fallback: "no_image.jpg", size: "60x60", class:"mt-3 rounded-circle"; %>
          <% end %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(post_path(post.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= post.title %></span></strong>
            <% end %>
          </p>
          <p class="card-text"><%= post.prefecture %></p>
          <span><i class="fas fa-user"></i> By <%= post.user.name %> ｜ </span>
          <span><%= link_to "#{post.post_comments.count} コメント", post_path(post.id), class:"text-dark" %></span>
          <span class="favorite-btn">
            <%= render 'favorites/favorite-btn', post: post %>
          </span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate @posts %>
</div>