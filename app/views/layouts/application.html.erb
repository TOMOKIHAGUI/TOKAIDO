<!DOCTYPE html>
<html>
  <head>
    <title>TOKAIDO</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand p-2" href="/">
            <h3 class="title-logo font-weight-bold">東海道中肘海月</h3>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li>
                <%= link_to "ABOUT", about_path, class: "fas fa-link, mr-2" %>
              </li>
              <li>
                <%= link_to "マイページ", user_path(current_user.id), class: "fas fa-user, mr-2" %>
              </li>
              <li>
                <%= link_to "投稿一覧", posts_path, class: "fas fa-images, mr-2, text-light" %>
              </li>
          　　<li>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "fas fa-sign-out-alt" %>
              </li>
            <% else %>
            　<li>
                <%= link_to "ABOUT", about_path, class: "fas fa-link, mr-2" %>
              </li>
              <li>
                <%= link_to "投稿一覧", posts_path, class: "fas fa-images, mr-2" %>
              </li>
              <li>
                <%= link_to "新規登録", new_user_registration_path, class: "fas fa-user-plus, mr-2" %>
              </li>
              <li>
                <%= link_to "ログイン", new_user_session_path, class: "fas fa-sign-in-alt" %>
              </li>
            <% end %>
            </ul>
          </div>
        </nav>
      </header>
      <main>
      <%= render 'layouts/notifications' %>
      <%= yield %>
      </main>
    <footer class="footer bg-dark">
    </footer>
  </body>
</html>
