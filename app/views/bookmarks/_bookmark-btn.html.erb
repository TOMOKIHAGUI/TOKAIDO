<% if post.bookmarked_by?(current_user) %>
  <i class="fas fa-folder-minus"></i><%= link_to "ブックマーク解除", post_bookmarks_path(post), method: :delete, remote: true %>
<% else %>
  <i class="fas fa-folder-plus"></i><%= link_to "ブックマークする", post_bookmarks_path(post), method: :post, remote: true %>
<% end %>
