<table class="table">
  <thead>
    <tr>
      <th>ユーザー画像</th>
      <th>ユーザー名</th>
      <th>出身地</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></td>
        <td><%= user.name %></td>
        <td><%= user.prefecture %></td>
        <% unless user == current_user %>
          <td><%= render "relationships/follow-btn", user: user %></td>
        <% end %>
        <td><%= link_to "Show", user_path(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>